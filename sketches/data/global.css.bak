html{
    background: #ffffff;
}
body{
    font-family: Arial, sans-serif;
    width: 330px;
    height: auto;
    margin-right: auto;
    margin-left: auto;
    border: 5px solid #abc0df;
    background: #abc0df;
}
hr{
    border: 2px;
    margin: 3px;
}
h1{
    margin: inherit;
}
h2{
    margin: auto;
}
h4,h5{
    margin: auto;
}
fieldset{
    background: #abc0df;
    border: 0px;
    box-shadow: 1px 4px 8px 0px #585858;
    margin-left: 5px;
    margin-right: 5px;
}
#brand_name{
    color: white;
    text-align: right;
}
img{
    width:auto;
    height:30px;
}
footer{
    font-family: Arial, sans-serif;
    font-size: small;
}
.btn, .btn:link, .btn:visited {
    display: inline-block;
    text-decoration: none;
    text-transform: uppercase;
}
.btn:hover, .btn:focus {
    color: white;
}
.btn--s {
    padding: 0.5em;
    box-shadow: 1px 4px 8px 0px #585858;
    margin-left: 5px;
}
.btn--m {
    padding: 0.5em;
    width: 100%;
    padding-left: 0px;
    padding-right: 0px;
}
.btn--full, .btn--full:link {
    display: block;
    margin-left: auto;
    margin-right: auto;
    text-align: center;
}
.btn--blue:link, .btn--blue:visited {
    background-color: #abc0df;
    
}
.btn--blue:hover, .btn--blue:focus {
    background-color: #96a6c1;
}

