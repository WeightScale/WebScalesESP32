<!DOCTYPE html>
<html lang='en'>

<head>
    <meta charset='UTF-8'>
    <meta name='viewport' content='width=device-width, initial-scale=1, maximum-scale=1.0, user-scalable=no' />
    <meta http-equiv='Cache-Control' content='no-cache, no-store, must-revalidate' />
    <meta http-equiv='Pragma' content='no-cache' />
    <title>WEB SCALES</title>
    <link rel='stylesheet' type='text/css' href='global.css'>
    <link rel='shortcut icon' href='favicon.png' type='image/png'>
    <style>
        #ws_id {
            background: #fff;
            font-size: 80px;
            font-family: Arial, sans-serif;
            color: #618ad2;
            margin-left: 5px;
            margin-right: 5px;
            box-shadow: 1px 4px 8px 0 #585858;
        }

        .td,
        .th {
            padding: 3px;
            border: 1px solid white;
        }

        .th {
            background: #a0a0a0;
            color: white;
        }

        #tw_id {
            color: #618ad2;
            font-size: medium;
            font-weight: bold;
            text-align: center;
        }

        table {
            width: auto;
            border-collapse: collapse;
        }

        input {
            font-size: 20px;
            text-align: center;
        }
        #id_alr_msg{
            color: white;
            font-size: 20px;
        }
        #id_alr{
            display: none;
            position: absolute;
            top: 10%;
            margin-left: 15px;
            width: 280px;
            padding: 10px;
            border-radius: 10px;
            background: #ff7c00;
        }
    </style>
    <script>
        var w,d = document,ob = [];
        window.alert = function(m,c){
            a = d.getElementById('id_alr');
            b = d.getElementById('id_alr_btn');
            d.getElementById("id_alr_msg").innerText = m;
            a.style.display = 'inline';
            setTimeout(function(){
                a.style.display = 'none';
            }, 10000);
            b.onclick = c;
            b.focus();
        };
        function SS(h, p, fm, fe) {
            var host = h,protocol = p,tw,ts,ws,wTimeout = function() {
                clearTimeout(tw);
                tw = setTimeout(function() {
                    fe();
                }, 7000);
            };
            this.snd = function(c) {
                ws.send(c);
            };
            this.getWeight = function() {
                ws.send("{'cmd':'wt'}");
                wTimeout();
            };
            this.oS = function() {
                ws = new WebSocket(host, protocol);
                ws.onopen = this.getWeight;
                ws.onclose = function() {
                    clearTimeout(tw);
                    sTimeout();
                    fe();
                };
                ws.onerror = function() {
                    fe();
                };
                ws.onmessage = function(e) {
                    fm(JSON.parse(e.data));
                }
            };
            var sTimeout = function() {
                clearTimeout(ts);
                ts = setTimeout(function() {
                    this.prototype.openSocket();
                }, 5000);
            }
        }

        function go() {
            d.getElementById('w_id').innerHTML = '---';
            d.getElementById('c_id').innerHTML = '--%';
            d.getElementById('b_id').style.visibility = 'visible';
        }

        function setZero() {
            d.getElementById('b_id').style.visibility = 'hidden';
            d.getElementById('w_id').innerHTML = '...';
            w.snd("{'cmd':'tp'}");
        }

        function cL(p, a) {
            let sum = 0;
            d.getElementById(p).innerHTML = '';
            var t = "<th class='th'>время</th><th class='th'>вес</th>";
            let tr = d.createElement('tr');
            tr.innerHTML = t;
            d.getElementById(p).appendChild(tr);
            a.forEach(function(o) {
                var row = d.createElement('tr');
                let w = parseFloat(o.v).toFixed(o.a);
                sum += w;
                row.innerHTML = "<td style='color: white' class='td'><i/>" + o.d.split("-")[1] + "</td><td width='auto' class='td'><i/><b/>" + w + "</td>";
                d.getElementById(p).appendChild(row);
            });
            var row = d.createElement('tr');
            row.innerHTML = "<td style='color: white' class='td'><i/>ИТОГО:</td><td width='auto' class='td'><i/><b/>" + sum + "</td>";
        }
        window.onload = function() {
            onBodyLoad();
        };

        function pC(e) {
            if (e.hasOwnProperty('cmd')) {
                switch (e.cmd) {
                    case 'wt':
                        try {
                            let st = d.getElementById('ws_id');
                            d.getElementById('w_id').innerHTML = e.w.toFixed(e.a);
                            d.getElementById('c_id').innerHTML = e.c + '%';
                            if (e.s) {
                                st.setAttribute('style', 'background: #CEE2FF;');
                            } else {
                                st.setAttribute('style', 'background: #fff;');
                            }
                        } catch (e) {
                            go();
                        } finally {
                            w.getWeight();
                        }
                        break;
                    case 'swt':
                        var date = new Date();
                        var dt = date.toLocaleDateString() + "-" + date.toLocaleTimeString();
                        e.d = dt;
                        ob.unshift(e);
                        if (ob.length > 5) ob.pop();
                        cL('tw_id', ob);
                        break;
                    case 'tp':
                        d.getElementById('b_id').style.visibility = 'visible';
                        w.getWeight();
                        break;
                    case 'dchg':
                        alert('Батарея разряжена!!! Поменяйте батарею.',function (){
                            d.getElementById('id_alr').style.display = 'none';
                        });
                        break;
                }
            }
        }

        function onBodyLoad() {
            w = new SS('ws://' + d.location.host + '/ws', ['arduino'], pC, function() {
                go();
                w.oS();
            });
            w.oS();
        }
    </script>
</head>

<body>
<div align='right' id='id_alr'>
    <p id='id_alr_msg'></p>
    <input class="btn--s" type='button' id='id_alr_btn' value='Ok'>
</div>
<table style="width: 100%">
    <tr style="text-align: center">
        <td><img src='scales.png' style='height: 42px;' /></td>
        <td></td>
        <td><h3 style="text-align:right" id='brand_name'>scale.in.ua</h3></td>
    </tr>
</table>
<hr>
<div align='right' id='ws_id'><b style="margin-right: 5px" id='w_id'>---</b></div>
<hr>
<table>
    <tr>
        <td style='width:1%; white-space: nowrap'><img src='bat.png' alt='B' /></td>
        <td><h3 id='c_id' style='display: inline'>--%</h3></td>
        <td align='right'><a href='javascript:setZero()' id='b_id' ><img src='zerow.png' alt="ноль" class='btn btn--s btn--blue'></a></td>
    </tr>
</table>
<hr>
<table id='tw_id'></table>
<table>
    <tr>
        <td>
            <a href='/settings.html'><img src='set.png' alt="настройки"></a>
        </td>
    </tr>
</table>
<hr>
<footer align='center'>2018 © Powered by www.scale.in.ua</footer>
</body>

</html>